<div class="card mb-3">
    <div class="card-header text-center">
        <h4>@Name</h4>
    </div>
    <div class="card-body">
        @if (Countries is null)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Carregando...</span>
                </div>
            </div>
        }
        else if (Countries.Length == 0)
        {
            <div class="d-flex justify-content-center">
                <span class="sr-only">Não foi possível detectar os países desse continente</span>
            </div>
        }
        else
        {
            <table class="table table-striped table-bordered table-round-corner w-100 mb-5">
                <thead>
                    <tr>
                        <th></th>
                        <th class="pl-3">Nome</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var country in Countries)
                    {
                        <tr>
                            <td class="text-center"><img src="@country.Flag" width="36" alt="@country.Name" /></td>
                            <td class="pl-2">@country.Name</td>
                            <td><span class="btn btn-success" @onclick="()=>DestinyCountrySelected(country.Name)">Localizar Rota</span></td>
                        </tr>
                    }
                </tbody>

            </table>


        }
    </div>
</div>